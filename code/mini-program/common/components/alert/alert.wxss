.alert{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 99999;
}
.con{
  border-radius: 10rpx;
  background: #fff;
  position: absolute;
  width: 80%;
  left: 10%;
  top:50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  z-index: 9;
}
.title{
  font-size: 34rpx;
  border-bottom:1rpx solid #d6dbe2;
  line-height: 90rpx;
  height: 90rpx;
  padding: 0 25rpx;
  color: #1089db;
}

.popup_bj{
  background: rgba(0, 0, 0, 0.8);
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
}